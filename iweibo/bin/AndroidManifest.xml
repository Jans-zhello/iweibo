<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iweibo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />
    <!-- 访问网络的权限 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 文件读取的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- 向SD卡中创建或者删除的权限。 -->
    <uses-permission android:name="andorid.permission.MONUN_UNMOUNT_FILESYSTEMS" />

    <application
        android:name="com.example.iweibo.util.WeiboApplication"
        android:allowBackup="true"
        android:icon="@drawable/iweibo_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.iweibo.ui.LogoActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.iweibo.ui.LoginActivity"
            android:theme="@style/theme_fullScreen" >
        </activity>
        <activity
            android:name="com.example.iweibo.ui.OauthActivity"
            android:theme="@style/theme_fullScreen" >
        </activity>
        <activity
            android:name="com.example.iweibo.ui.WebViewActivity"
            android:theme="@style/theme_fullScreen" >
        </activity>
        <activity
            android:name="com.example.iweibo.ui.AccessActivity"
            android:theme="@style/theme_fullScreen" >
        </activity>
        <activity
            android:name="com.example.iweibo.ui.HomeActivity"
            android:theme="@style/theme_fullScreen" >
        </activity>
        <activity
            android:name="com.example.iweibo.ui.MainActivity"
            android:theme="@style/theme_fullScreen" >
        </activity>
        <activity
            android:name="com.example.iweibo.ui.AtActivity"
            android:theme="@style/theme_fullScreen" >
        </activity>
        <activity
            android:name="com.example.iweibo.ui.MsgActivity"
            android:theme="@style/theme_fullScreen" >
        </activity>StretchActivity
        <activity
            android:name="com.example.iweibo.ui.MoreActivity"
            android:theme="@style/theme_fullScreen" >
        </activity>
        <service android:name="com.example.iweibo.logic.MainService" >
        </service>
    </application>

</manifest>